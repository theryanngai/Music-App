<h1><%= @album.name %></h1>
<h3>by <%= link_to @album.band.name, 
		band_url(@album.band) %></h3>
<h4><%= @album.recorded_at.capitalize %></h4>

<ul>
	<% @album.tracks.each do |track| %>
		<li><%= link_to track.name, track_url(track) %></li>
	<% end %>
</ul>

<br><br>
<%= link_to "Edit this Album", edit_album_url(@album) %>
<br>
<%= link_to "Add a Track", new_album_track_url(params[:id]) %>
<br>
<%= link_to "<< Back to Artist", band_url(@album.band) %>
<br><br>
<%= button_to "Delete Album", @album, :method => 'delete' %>
